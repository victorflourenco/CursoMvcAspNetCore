
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>Palavra - Listagem</title>
    <style>
        #btnCadastrar {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <span><b>Total dos registros:</b>@ViewBag.Palavras.Count</span>
    <div class="container">
        <a id="btnCadastrar" href="/palavara/cadastrar" class="btn btn-success">Cadastrar</a>
        <br /><br />
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Palavra</th>
                    <th scope="col">Nível</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Elefante</td>
                    <td>Fácil</td>
                    <td>
                        <a href="/palavara/cadastrar" class="btn btn-secondary">Editar</a>
                        <a href="/palavara/excluir/39" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>

